@(formPost: Form[Post], backUrl: String)(implicit flash: Flash, session: play.api.mvc.Session)
@import helper._
@admin {

   <h1 class="title-section">Nuova notizia</h1>
				@form(routes.Admin.insertPost(backUrl)) {
        <fieldset>
            @inputText(formPost("title"), '_label -> "Titolo(*)")
            @textarea(formPost("content"), '_label -> "Contenuto(*)")
        </fieldset>
        <div class="actions">
            <input type="submit" value="Salva" class="button-link">
						}
						@form(routes.Application.redirect(backUrl)) {
        		<input type="submit" value="Annulla" class="button-link">
    				}
        </div>
         <p>(*)Obbligatori</p>
        
}