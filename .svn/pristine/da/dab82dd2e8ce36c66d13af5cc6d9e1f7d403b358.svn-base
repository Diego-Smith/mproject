* {margin: 0; padding: 0;}
 
.consigli div {
  margin: 20px;
}
 
ul.consigli  {
  list-style-type: none;
  width: 500px;
}
 
.consigli h3 {
  font: bold 20px/1.5 Helvetica, Verdana, sans-serif;
}
 
.consigli li img {
  float: left;
  margin: 0 15px 0 0;
  width: 150px;
}
 
.consigli li p {
  font: 200 12px/1.5 Georgia, Times New Roman, serif;
}
 
.consigli li {
  padding: 10px;
  overflow: auto;
}
 
