@(posts: List[Post])(implicit session: play.api.mvc.Session, flash: Flash)

@header(orderBy: Int, title: String) = {
    <th>
        @title
    </th>
}

@import org.apache.commons.lang3.time.DateFormatUtils.{format => formatDate}

@admin {
	<ul>
	<table>
            <thead>
                <tr>
                    @header(2, "Titolo")
                    @header(3, "Contenuto")
                    @header(4, "Data")
                </tr>
            </thead>
	

			<tbody>

                @posts.map { post => 
                        <tr>
                            <td><a href='@routes.Admin.editPost(post.id.get, "/admin/posts")'>@post.title</a></td>
                	   		<td>
                	   		@post.content 
                	   		</td>
                            <td>
                				@formatDate(post.dateCreation, "dd/MM/yyyy HH:mm")
                            </td>
                        </tr>
                     }

            </tbody>
    </table>
}
    
